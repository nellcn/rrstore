
<p>
  <strong>Prod:</strong>
  <%= @product.prod_id %>
</p>

<p>
  <strong>Prod name:</strong>
  <%= @product.prod_name %>
</p>

<p>
  <strong>Prod price:</strong>
  <%= @product.prod_price %>
</p>

<p>
  <strong>Prod amount:</strong>
  <%= @product.prod_amount %>
</p>

<p>
  <strong>Prod desc:</strong>
  <%= @product.prod_desc %>
</p>

<%= form_for @order do |f| %>
  <%= f.hidden_field :order_id %>
  <%= f.hidden_field :user_id %>
  <%= f.hidden_field :prod_id %>
  <%= f.hidden_field :invoice_id %>
  Count : <%= f.number_field :prod_count %>
  <%= f.submit %>
<% end %>

